<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <EditText
            android:id="@+id/namefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:paddingBottom="15dp"
            android:inputType="textCapWords"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yearfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAllCaps="true"
            android:text="year/department"
            android:textSize="25dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yr/dpt"
            android:paddingBottom="15dp"
            android:inputType="textCapWords"
            android:textStyle="bold" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAllCaps="true"
            android:text="I batch"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ECE103"
                android:id="@+id/ece_103"
                android:textSize="16sp"
                android:paddingLeft="24dp"/>


            <Button
                android:orientation="horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="+"
                android:onClick="increment"
                android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"

                />

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="-"
                android:textStyle="bold"
                android:onClick="decrement"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EIE201"
                android:id="@+id/eie_201"
                android:textSize="16sp"
                android:paddingLeft="24dp" />
            <Button
                android:orientation="horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="+"
                android:onClick="secondincrement"
                android:paddingLeft="10dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/quantity_text_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"

                />

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="-"
                android:textStyle="bold"
                android:onClick="seconddecrement"/>
        </LinearLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="II batch"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ECE203"
                android:id="@+id/ece_203"
                android:textSize="16sp"
                android:paddingLeft="24dp" />
            <Button
                android:orientation="horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="+"
                android:onClick="thirdincrement"
                android:paddingLeft="10dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/quantity_text_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"

                />

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="-"
                android:textStyle="bold"
                android:onClick="thirddecrement"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EIE302"
                android:id="@+id/eie_302"
                android:textSize="16sp"
                android:paddingLeft="24dp" />
            <Button
                android:orientation="horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="+"
                android:onClick="fourthincrement"
                android:paddingLeft="10dp"
                android:layout_marginLeft="28dp"/>
            <TextView
                android:id="@+id/quantity_text_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"

                />

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="-"
                android:textStyle="bold"
                android:onClick="fourthdecrement"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="order summary"
            android:textSize="25dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/order_summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RS:0"
            android:textSize="30sp"
            android:paddingLeft="10dp"
            android:textColor="#000000" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitOrder"
            android:text="Order" />
    </LinearLayout>

</ScrollView>





